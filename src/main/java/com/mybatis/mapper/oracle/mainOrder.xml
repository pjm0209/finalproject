<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.team2.mbti.main.order.model.MainOrderDAO">
	<select id="selectOrderDetailList" parameterType="int" resultType="mainOrderVo">
		select * from orders_Detail
		where orders_no = #{ordersNo}
	</select>
	
	<select id="selectOrderList" parameterType="int" resultMap="orderListResultMap">
		select * from orders
		where no = #{no}
	</select>
	
	<resultMap type="mainOrderAllVo" id="orderListResultMap">
		<association property="mainOrderAllVo" column="ordersNo" javaType="mainOrderAllVo">
			<id property="ordersNo" column="ordersNo" jdbcType="BIGINT"></id>
			<result property="no" column="no" jdbcType="BIGINT"/>
			<result property="recipient" column="recipient" jdbcType="VARCHAR"/>
			<result property="reZipcode" column="reZipcode" jdbcType="VARCHAR"/>
			<result property="reAddress" column="reAddress" jdbcType="VARCHAR"/>
			<result property="reAddressDetail" column="reAddressDetail" jdbcType="VARCHAR"/>
			<result property="reHp" column="reHp" jdbcType="VARCHAR"/>
			<result property="sumPrice" column="sumPrice" jdbcType="BIGINT"/>
			<result property="paymentMethod" column="paymentMethod" jdbcType="VARCHAR"/>
			<result property="orderRegdate" column="orderRegdate" jdbcType="VARCHAR"/>
		</association>
		<collection property="orderDetailList" javaType="ArrayList" column="ordersNo" ofType="Map"></collection>
	</resultMap>
</mapper>